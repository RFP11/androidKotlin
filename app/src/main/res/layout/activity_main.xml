<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/navbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:background="@color/navbar"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Praktek 1"
            android:textSize="20sp"
            android:textColor="@color/text"
            android:layout_margin="5dp"
            android:id="@+id/plainText"
            />



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="Masukan Bilangan: "
        android:textColor="#4A616B"
        android:textSize="17sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bilangan"
        app:layout_constraintTop_toBottomOf="@id/navbar" />

    <EditText
        android:id="@+id/bilangan"
        android:layout_width="150dp"
        android:layout_height="29dp"
        app:layout_constraintTop_toBottomOf="@id/navbar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="40dp"
        android:background="#ADADAD"
        android:layout_marginTop="13dp"
        android:hint="Masukan Bilangan"
        android:textColorHint="@color/text"
        android:textColor="@color/text"
        android:textSize="13sp"
        android:paddingLeft="10dp"
        tools:ignore="ExtraText" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eksekusi"
        android:layout_margin="15dp"
        android:text="Munculkan Bilangan genap"
        android:textSize="10sp"
        android:textColor="@color/text"
        android:backgroundTint="@color/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bilangan"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/plainTeks2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="12dp"
        android:text="Hasil: "
        android:textColor="#4A616B"
        android:textSize="17sp"
        app:layout_constraintRight_toLeftOf="@id/hasil"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eksekusi" />

    <TextView
        android:id="@+id/hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Hasil akan muncul disini"
        android:textColor="#4A616B"
        app:layout_constraintRight_toRightOf="@id/plainTeks2"
        app:layout_constraintTop_toBottomOf="@id/eksekusi" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/praktek2"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hasil"
        android:textColor="@color/text"
        android:backgroundTint="@color/bg"
        android:text="Lanjut ke Praktek 2"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/praktek3"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/praktek2"
        android:textColor="@color/text"
        android:backgroundTint="@color/bg"
        android:text="Lanjut ke Praktek 3"
        />


</androidx.constraintlayout.widget.ConstraintLayout>